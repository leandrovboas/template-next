{
  "name": "template-next",
  "version": "1.0.0",
  "description": "This is a template for initial configuration for projects based in Next Js.",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src --max-warnings=0",
    "test": "jest --config jest.config.js --no-cache",
    "test:watch": "jest --watch",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "start-server-and-test start http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test start http://localhost:3000 cypress:headless"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leandrovboas/template-next.git"
  },
  "keywords": [
    "nextjs"
  ],
  "author": "Leandro Vilas Boas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leandrovboas/template-next/issues"
  },
  "homepage": "https://github.com/leandrovboas/template-next#readme",
  "dependencies": {
    "jest-styled-components": "^7.0.5",
    "next": "10.2.0",
    "next-images": "^1.7.0",
    "polished": "^4.1.3",
    "prettier-eslint-cli": "^5.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/node": "^15.3.0",
    "@types/react": "^17.0.5",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-jest": "^27.2.5",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "cypress": "^8.6.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.0",
    "react-test-renderer": "^17.0.2",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
